<div class="m-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="m-portlet">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <span class="m-portlet__head-icon">
                                <i class="la la-file-text"></i>
                            </span>
                            <h3 class="m-portlet__head-text">
                                基本情報
                            </h3>
                        </div>
                    </div>
                </div>
                <!--begin::Form-->
                <div class="m-portlet__body">
                    <div class="m-section">
                        <div class="m-section__content">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col-lg-1 offset-lg-1 m--font-bold">
                                            @Html.DisplayNameFor(model => model.ID)
                                        </div>
                                        <div class="col-lg-6">
                                            @Model.ID
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 m--margin-top-20">
                                    <div class="row">
                                        <div class="col-lg-1 offset-lg-1 m--font-bold">
                                            @Html.DisplayNameFor(model => model.Username)
                                        </div>
                                        <div class="col-lg-6">
                                            @Model.Username
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 m--margin-top-20">
                                    <div class="row">
                                        <div class="col-lg-1 offset-lg-1 m--font-bold">
                                            @Html.DisplayNameFor(model => model.ExerciseName)
                                        </div>
                                        <div class="col-lg-6">
                                            @Model.ExerciseName
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 m--margin-top-20">
                                    <div class="row">
                                        <div class="col-lg-1 offset-lg-1 m--font-bold">
                                            @Html.DisplayNameFor(model => model.CurrentProgress)
                                        </div>
                                        <div class="col-lg-6">
                                            @Model.CurrentProgress
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 m--margin-top-20">
                                    <div class="row">
                                        <div class="col-lg-1 offset-lg-1 m--font-bold">
                                            @Html.DisplayNameFor(model => model.StartDate)
                                        </div>
                                        <div class="col-lg-6">
                                            @Model.StartDate
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 m--margin-top-20">
                                    <div class="row">
                                        <div class="col-lg-1 offset-lg-1 m--font-bold">
                                            @Html.DisplayNameFor(model => model.EndDate)
                                        </div>
                                        <div class="col-lg-6">
                                            @Model.EndDate
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Form-->
            </div>
            <div class="m-portlet">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <span class="m-portlet__head-icon">
                                <i class="la la-list"></i>
                            </span>
                            <h3 class="m-portlet__head-text">
                                解答記録
                            </h3>
                        </div>
                    </div>
                </div>
                <!--begin::Form-->
                <div class="m-portlet__body">
                    <div class="m-section">
                        <div class="m-section__content">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>日本文</th>
                                        <th>英文</th>
                                        <th>解答</th>
                                        <th>評定</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var answerRecordPresenter in Model.AnswerRecordPresenterCollection)
                                    {
                                        <tr>
                                            <td>@answerRecordPresenter.ID</td>
                                            <td>@answerRecordPresenter.SentenceJP</td>
                                            <td>@answerRecordPresenter.SentenceEN</td>
                                            <td>@answerRecordPresenter.AnswerDivision</td>
                                            <td>
                                                @if (answerRecordPresenter.IsCorrect)
                                                {
                                                    <i class="la la-check"></i>
                                                }
                                                else
                                                {
                                                    <i class="la la-close"></i>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details","AnswerRecordManage",new { id = answerRecordPresenter.ID })" class="m-portlet__nav-link btn m-btn m-btn--hover-brand m-btn--icon m-btn--icon-only m-btn--pill" title="View">
                                                    <i class="la la-search"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!--end::Form-->
            </div>
        </div>
    </div>
    <!--begin::Modal-->
    <div class="modal fade" id="modal-confirm" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">
                        確認してください
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">
                            &times;
                        </span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>
                        今はメニューリストへ戻ります…<br />
                    </p>
                    <em>
                        あなた入力したデータは<span class="m--font-boldest">保存しない</span>とします
                    </em>
                </div>
                <div class="modal-footer clearfix">
                    <button type="button" class="btn btn-secondary pull-left" data-dismiss="modal">
                        もう一度考えさせて...
                    </button>
                    <a href="@Url.Action("Index","ItemManage")" class="btn btn-danger pull-right">
                        今度の編集をやめる
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!--end::Modal-->
</div>



