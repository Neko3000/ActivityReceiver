<div class="m-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="m-portlet">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <span class="m-portlet__head-icon">
                                <i class="la la-file-text"></i>
                            </span>
                            <h3 class="m-portlet__head-text">
                                基本情報
                            </h3>
                        </div>
                    </div>
                </div>
                <!--begin::Form-->
                <div class="m-portlet__body">
                    <div class="m-section">
                        <div class="m-section__content">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col-lg-1 offset-lg-1 m--font-bold">
                                            @Html.DisplayNameFor(model => model.ID)
                                        </div>
                                        <div class="col-lg-6">
                                            @Model.ID
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 m--margin-top-20">
                                    <div class="row">
                                        <div class="col-lg-1 offset-lg-1 m--font-bold">
                                            @Html.DisplayNameFor(model => model.Username)
                                        </div>
                                        <div class="col-lg-6">
                                            @Model.Username
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 m--margin-top-20">
                                    <div class="row">
                                        <div class="col-lg-1 offset-lg-1 m--font-bold">
                                            @Html.DisplayNameFor(model => model.ExerciseName)
                                        </div>
                                        <div class="col-lg-6">
                                            @Model.ExerciseName
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 m--margin-top-20">
                                    <div class="row">
                                        <div class="col-lg-1 offset-lg-1 m--font-bold">
                                            @Html.DisplayNameFor(model => model.CurrentProgress)
                                        </div>
                                        <div class="col-lg-6">
                                            @Model.CurrentProgress
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 m--margin-top-20">
                                    <div class="row">
                                        <div class="col-lg-1 offset-lg-1 m--font-bold">
                                            @Html.DisplayNameFor(model => model.StartDate)
                                        </div>
                                        <div class="col-lg-6">
                                            @Model.StartDate
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 m--margin-top-20">
                                    <div class="row">
                                        <div class="col-lg-1 offset-lg-1 m--font-bold">
                                            @Html.DisplayNameFor(model => model.EndDate)
                                        </div>
                                        <div class="col-lg-6">
                                            @Model.EndDate
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Form-->
            </div>
            <div class="m-portlet">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <span class="m-portlet__head-icon">
                                <i class="la la-list"></i>
                            </span>
                            <h3 class="m-portlet__head-text">
                                解答記録
                            </h3>
                        </div>
                    </div>
                </div>

                <!--begin::Form-->
                <div class="m-portlet__body">
                    <!--begin: Datatable -->
                    <table class="table table-striped- table-bordered table-hover table-checkable" id="answer-record-list-table">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    開始時間
                                </th>
                                <th>
                                    完成時間
                                </th>
                                <th>
                                    評定
                                </th>
                                <th>
                                    D＆D回数
                                </th>
                                <th>
                                    Drop->Drag平均時間
                                </th>
                                <th>
                                    Drag->Drop平均時間
                                </th>
                                <th>
                                    Drag->Drop平均速度
                                </th>
                                <th>
                                    U-ターン横方向
                                </th>
                                <th>
                                    U-ターン縦方向
                                </th>
                                <th>
                                    操作
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                for (int i = 0; i < Model.AnswerRecordPresenterCollection.Count; i++)
                                {
                                    var answerRecordPresenter = Model.AnswerRecordPresenterCollection[i];
                                    <tr>
                                        <td>
                                            @answerRecordPresenter.ID
                                        </td>
                                        <td>
                                            @answerRecordPresenter.StartDate
                                        </td>
                                        <td>
                                            @answerRecordPresenter.EndDate
                                        </td>
                                        <td>
                                            @if (answerRecordPresenter.IsCorrect)
                                            {
                                                <i class="fa fa-check-circle m--font-success"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-times-circle m--font-danger"></i>
                                            }
                                        </td>
                                        <td>
                                            @answerRecordPresenter.DDCount
                                        </td>
                                        <td>
                                            @answerRecordPresenter.DDIntervalAVG ms
                                        </td>
                                        <td>
                                            @answerRecordPresenter.DDProcessAVG ms
                                        </td>
                                        <td>
                                            @answerRecordPresenter.DDSpeedAVG px/s
                                        </td>
                                        <td>
                                            @answerRecordPresenter.UTurnHorizontalCount
                                        </td>
                                        <td>
                                            @answerRecordPresenter.UTurnVerticalCount
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Details","AnswerRecordManage",new { id=answerRecordPresenter.ID })" class="m-portlet__nav-link btn m-btn m-btn--hover-brand m-btn--icon m-btn--icon-only m-btn--pill" title="View">
                                                <i class="la la-search"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <!--end: Datatable -->
                </div>
                <!--end::Form-->
            </div>
        </div>
    </div>

</div>



@section Scripts {

    @*@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }*@

    <!--begin::Page Vendors -->
    <script src="~/Metronic/demos/default/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    <!--end::Page Vendors -->

    <script>
        var dataTables = function () {

            var initAnswerRecordTable = function () {
                var table = $('#answer-record-list-table');

                // begin first table
                table.DataTable({
                    responsive: true,

                    //== DOM Layout settings
                    dom: `<'row'<'col-sm-12'tr>>
                                <'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7 dataTables_pager'lp>>`,

                    lengthMenu: [5, 10, 25, 50],

                    pageLength: 10,

                    language: {
                        'lengthMenu': 'Display _MENU_',
                    },

                    //== Order settings
                    order: [[0, 'desc']],

                    columnDefs: [
                        {
                            targets: -1,
                            orderable: false,
                        },
                    ],

                    language: {
                        "sProcessing": "処理中...",
                        "sLengthMenu": " _MENU_ 個項目を表示するしている",
                        "sZeroRecords": "条件に一致した項目は存在しない",
                        "sInfo": " _START_ から _END_ までの項目を表示している，総計 _TOTAL_ 個",
                        "sInfoEmpty": " 0 から 0 までの項目を表示している，総計 0 個",
                        "sInfoFiltered": "( _MAX_ から絞った項目)",
                        "sInfoPostFix": "",
                        "sSearch": "検索:",
                        "sUrl": "",
                        "sEmptyTable": "項目は存在しない",
                        "sLoadingRecords": "読み込み中...",
                        "sInfoThousands": ",",

                        "oAria": {
                            "sSortAscending": ": 昇順で並び替える",
                            "sSortDescending": ": 降順で並び替える"
                        }
                    }
                });
            };

            return {

                //main function to initiate the module
                init: function () {
                    initAnswerRecordTable();
                },

            };

        }();

        $(function () {
            dataTables.init();
        });

    </script>
}