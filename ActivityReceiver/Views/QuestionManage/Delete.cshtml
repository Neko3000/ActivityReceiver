    <script src="~/Metronic/assets/demo/default/custom/components/forms/widgets/bootstrap-select.js" type="text/javascript"></script>

    <script>

        $(function () {

            //Delete function for buttons with data-action and data-target
            $('button').filter('[data-action="form-submit"]').click(function () {
                $($(this).data('target')).submit();
            });
        });

    </script>
}
