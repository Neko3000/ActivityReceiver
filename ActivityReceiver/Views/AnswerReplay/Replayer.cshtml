@model ActivityReceiver.ViewModels.AnswerReplayerReplayerGetViewModel
@{
    ViewData["Title"] = "Replayer";
    Layout = "~/Views/Shared/_LayoutReplayer.cshtml";
}

<section class="center-container">
    <div class="replayer center-object">
        <div class="main-view">
            <div class="sentence-jp">
                賢い人は探すより機会を作るのだ。
            </div>

            <div class="sentence-en">
                A wise man will make more opportunities than he finds.
            </div>

        </div>

        <div class="m--space-10"></div>

        <button class="get-data btn btn-primary" type="button">
            get some data
        </button>
        <button class="start-play btn btn-primary" type="button">
            play
        </button>

        <div class="m--space-10"></div>

        <div class="progress m-progress--sm">
            <div class="progress-bar m--bg-accent acceleration-x" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>

        <div class="m--space-10"></div>

        <div class="progress m-progress--sm">
            <div class="progress-bar m--bg-warning acceleration-y" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
        </div>

        <div class="m--space-10"></div>

        <div class="progress m-progress--sm">
            <div class="progress-bar m--bg-danger acceleration-z" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
        </div>

    </div>
</section>

@section Scripts {

    <script>
        $(function () {
            $('.replayer').replayer(@(Model.AnswerID));
        });
    </script>

}